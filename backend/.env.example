# ===========================================
# Batlokoa Backend Environment Configuration
# ===========================================
# Copy this file to .env and update values

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/batlokoa_db?schema=public"

# Server
PORT=3016
NODE_ENV=development

# JWT Authentication
JWT_SECRET=generate-a-64-character-secure-random-string-here
JWT_EXPIRES_IN=7d

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM="Batlokoa Innovative Projects <noreply@example.com>"

# WhatsApp Business API (optional)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_VERIFY_TOKEN=

# Admin WhatsApp for notifications
ADMIN_PHONE=27123456789

# URLs
ADMIN_URL=http://localhost:5173/admin
FRONTEND_URL=http://localhost:5173

# Default Admin (created on first seed)
ADMIN_EMAIL=admin@batlokoainnovpro.co.za
ADMIN_PASSWORD=ChangeThisPassword123!
